# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /qcms                       controllers.Qcm.index()

# QCM
GET     /admin                       controllers.admin.AdminController.index()
GET     /admin/qcms                  controllers.admin.QcmController.index()
GET     /admin/qcms/new              controllers.admin.QcmController.create()
POST    /admin/qcms                  controllers.admin.QcmController.save()

# Questions
GET     /admin                       controllers.admin.AdminController.index()
GET     /admin/questions             controllers.admin.QuestionController.index()
POST    /admin/questions             controllers.admin.QuestionController.newQuestion()

#provisoire menu
GET     /admin/qcms                  controllers.admin.ProvisoireController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file          controllers.Assets.at(path="/public", file)
